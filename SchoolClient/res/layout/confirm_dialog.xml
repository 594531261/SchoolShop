<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/con_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/kuzi" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/con_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txtj"
                        android:maxLines="2"
                        android:textSize="@dimen/index_text_size_30px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/totalprice"
                            android:textColor="@color/txtj"
                            android:textSize="@dimen/index_text_size_30px" />

                        <TextView
                            android:id="@+id/con_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/fs"
                            android:textSize="@dimen/index_text_size_40px" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="0.9"
                android:onClick="backfinish"
                android:src="@drawable/close_black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/con_title_chicun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/chicun"
                android:textColor="@color/txtj"
                android:textSize="@dimen/index_text_size_28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <GridView
                    android:id="@+id/gridview_cun"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@android:color/transparent"
                    android:horizontalSpacing="5dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="3"  
                    android:stretchMode="columnWidth"
                    android:columnWidth="100dp"
                    android:verticalSpacing="1dip" />
                <!--
            android:stretchMode="columnWidth"
             <TextView
	                android:layout_width="95dp"
	                android:layout_height="72dp"
                 	android:gravity="center"
	                android:layout_margin="5dp"
	                android:text="S"
	                android:background="@color/white"
	                android:textColor="@color/black"
	                android:textSize="@dimen/index_text_size_28px" />
             <TextView
	                android:layout_width="95dp"
	                android:layout_height="72dp"
	                android:text="M"
	                android:background="@color/white"
	                android:textColor="@color/black"
	                android:gravity="center"
	                android:layout_margin="5dp"
	                android:textSize="@dimen/index_text_size_28px" />
             <TextView
	               android:layout_width="95dp"
	                android:layout_height="72dp"
	                android:text="L"
	                android:background="@color/white"
	                android:textColor="@color/black"
	                android:gravity="center"
	                android:layout_margin="5dp"
	                android:textSize="@dimen/index_text_size_28px"
                -->
            </LinearLayout>

            <TextView
                android:id="@+id/con_title_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/color"
                android:textColor="@color/txtj"
                android:textSize="@dimen/index_text_size_28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <GridView
                    android:id="@+id/gridview_color"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                     android:columnWidth="100dp"
                    android:cacheColorHint="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:horizontalSpacing="5dp"
                    android:listSelector="@android:color/transparent"
                   android:numColumns="3"  					android:stretchMode="columnWidth"
                    android:verticalSpacing="5dip" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/count"
                android:textColor="@color/txtj"
                android:textSize="@dimen/index_text_size_28px" />

            <LinearLayout
                android:id="@+id/id3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/lose"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_white_bg"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lose_black" />
                </LinearLayout>

                <EditText
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="1px"
                    android:background="@drawable/rect_circle"
                    android:gravity="center" />

                <LinearLayout
                    android:id="@+id/add"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_white_bg"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1px"
                        android:scaleType="centerCrop"
                        android:src="@drawable/add_black" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                 android:layout_marginTop="10dp"
                android:id="@+id/id4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/buy_selector"
                android:gravity="center"
                android:onClick="gocar"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/confirmbuy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/index_text_size_32px" />
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
